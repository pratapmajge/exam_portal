{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": ["warn", { 
      "allow": ["warn", "error", "info"] 
    }],
    "no-unused-vars": ["error", { 
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { 
      "avoidEscape": true,
      "allowTemplateLiterals": true
    }]
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "frontend/"
  ]
} 